                    </div>
                    <div class="card-body">
                        <dl class="dl-horizontal">

                            <dt>
                                @Html.DisplayNameFor(model => model.operacion)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.operacion)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.valor)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.valor)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.oficial)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.oficial)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.fechavencimiento)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.fechavencimiento)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.plazo)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.plazo)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.interes)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.interes)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.fechacreacion)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.fechacreacion)
                            </dd>



                        </dl>
                    </div>
                    <div class="box-footer p-2">
                        @Html.ActionLink("<< Regresar", "Index", null, new { @class = "btn btn-primary" })
                        
                    </div>
                </div>

            </div>
            <div class="col-lg-2 col-md-2">
            </div>
        </div>
    </section>
</div>
