@model adminlte.Models.SendCodeViewModel
@{
                

                ViewBag.Title = "Enviar Codigo Verificacion";
                Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="login-box-body">

    <h3>@ViewBag.Title.</h3>

    @using (Html.BeginForm("SendCode", "Account", new { ReturnUrl = Model.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
@Html.AntiForgeryToken()


<hr />

<div class="row">
    <div class="col-md-8">
        
        @Html.HiddenFor(model => model.SelectedProvider, new { @class = "form-control" })
        @*@Html.DropDownListFor(model => model.SelectedProvider, Model.Providers)*@

        <input type="submit" value="Enviar código" class="btn btn-primary text-center" />
    </div>
</div>
}
</div>