@model adminlte.Models.Cartera.CreditoViewModel
@using System.Data
@{
    ViewBag.Title = "Transactiones de Crédito";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="content-wrapper">
   


    <section class="content">

        <div class="row">
            <div class="col-lg-2 col-md-2">
            </div>
            <div class="col-lg-8 col-sm-12 col-md-8">
                <div class="card shadow mb-4">
                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                        <h6 class="m-0 font-weight-bold text-primary">Detalle de Crédito </h6>
                        <div class="dropdown no-arrow">
                            <a href="/Cartera/Index" role="button">
                                << Regresar
                            </a>
                            
                        </div>
                    </div>
                    <div class="card-body">
                        <table class="table table-responsive-sm table-bordered">

                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.operacion)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.estado)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.producto)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.saldo)
                                </th>

                            </tr>
                            <tr>
                                <td>
                                    @Html.DisplayFor(model => model.operacion)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.estado)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.producto)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.saldo)
                                </td>


                            </tr>

                        </table>
                       
                        @if (ViewBag.ds != null)
                        {
                            <div class="row">
                                <section class="col-lg-12 ">
                                    <div class="card shadow mb-4">
                                        <div class="card-header py-3">
                                            <h6 class="m-0 font-weight-bold text-primary">Consulta de transacciones</h6>
                                        </div>
                                        <div class="card-body" style="padding-bottom:0px !important;">
                                            @if (ViewBag.ds.Tables.Count > 0)
                                            {
                                                <table class="table table-bordered">
                                                    <tbody>
                                                        <tr>
                                                            <th style="width: 30%">Fecha</th>
                                                            <th style="width: 20%">Estado</th>
                                                            <th style="width: 20%">Valor</th>
                                                            <th style="width: 20%">Saldo</th>
                                                        </tr>
                                                        @foreach (DataRow row in ViewBag.ds.Tables[0].Rows)
                                                        {
                                                            <tr>
                                                                <td>@row["fecha"]</td>
                                                                <td>@row["estado"]</td>
                                                                <td>@row["valor"]</td>
                                                                <td>@row["saldo"]</td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            }
                                            else
                                            {
                                                <ol class="breadcrumb">
                                                    No existen datos
                                                </ol>
                                            }
                                        </div>
                                    </div>
                                </section>
                            </div>
                        }
                    </div>
                </div>

            </div>
            <div class="col-lg-2 col-md-2">
            </div>
        </div>
    </section>
</div>
